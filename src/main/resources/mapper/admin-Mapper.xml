<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 모든 SQL문을 mapper태그 안에 작성 -->
<mapper namespace="adminMapper">
	<resultMap type="com.kh.project.admin.vo.CategoryVO" id="category">
		<id column="CATE_CODE" property="cateCode"/>
		<result column="CATE_NAME" property="cateName"/>
	</resultMap>
	<resultMap type="com.kh.project.item.vo.ItemVO" id="item">
		<id column="ITEM_CODE" property="itemCode"/>
		<result column="ITEM_NAME" property="itemName"/>
		<result column="ITEM_PRICE" property="itemPrice"/>
		<result column="ITEM_INTRO" property="itemIntro"/>
		<result column="ITEM_STOCK" property="itemStock"/>
		<result column="ITEM_STATUS" property="itemStatus"/>
		<result column="CATE_CODE" property="cateCode"/>
	</resultMap>
	
	<resultMap type="com.kh.project.admin.vo.SalesManageVO" id="view">
		<result column="ITEM_CODE" property="itemCode"/>
		<result column="ITEM_NAME" property="itemName"/>
		<result column="TOTAL_PRICE" property="totalPrice"/>
		<result column="ITEM_CNT" property="itemCnt"/>
		<result column="CATE_CODE" property="cateCode"/>
		<result column="CART_CODE" property="cartCode"/>
		<result column="BUY_DATE" property="buyDate"/>
	</resultMap>
	
	
	<insert id="insertCategory">
		INSERT INTO CATEGORY (
			CATE_CODE
			, CATE_NAME
		) VALUES(
			(SELECT 'CATE_'||LPAD(NVL(MAX(TO_NUMBER(SUBSTR(CATE_CODE, 6, 3))), 0) + 1, 3, '0') FROM CATEGORY)
			, #{cateName}
		)
	</insert> 
	<select id="selectCategoryList" resultMap="category">
		SELECT CATE_CODE
		, CATE_NAME
		FROM CATEGORY
		ORDER BY CATE_CODE
	</select>
	
	<delete id="deleteCategory">
		DELETE CATEGORY
		WHERE CATE_CODE = #{cateCode}
	</delete>
	
	<!-- 매출관리를 위한 상품정보 목록 -->
	<select id="selectSalesList" resultMap="view">
		SELECT ITEM_CODE
			, TOTAL_PRICE
			, CATE_CODE
			, ITEM_CNT
			, TO_CHAR(BUY_DATE, 'YYYY.MM.DD') AS BUY_DATE
			, ITEM_NAME
		FROM SALES
	</select>
	<insert id="insertItem">
		INSERT INTO ITEM(
			ITEM_NAME
			, ITEM_PRICE
			, ITEM_STOCK
			, ITEM_STATUS
			, ITEM_CODE
			, ITEM_INTRO
			, CATE_CODE
		)VALUES(
			#{itemName}
			, #{itemPrice}
			, #{itemStock}
			, #{itemStatus}
			, #{itemCode}
			, #{itemIntro}
			, #{cateCode}
		)
	</insert>
	
	<select id="selectNextNumber" resultType="int">
		SELECT NVL(MAX(TO_NUMBER(SUBSTR(IMG_CODE, 5, 3))) + 1, 1)
		FROM ITEM_IMG
	</select>
	<select id="selectNextItemCode" resultType="String">
		SELECT 'ITEM_'||LPAD(NVL(MAX(TO_NUMBER(SUBSTR(ITEM_CODE, 6, 4))), 0) + 1, 3, '0') 
		FROM ITEM
	</select>
	
</mapper>













